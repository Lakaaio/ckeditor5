- var classes = [ 'main__content', 'formatted' ];
- var mainClasses = [ 'main' ];
- if ( page.isApi ) classes.push( 'main__content--api' );
- if ( page.isSdk ) classes.push( 'main__content--sdk' );
- if ( page.classes ) classes.push( page.classes );
- if ( page.sitenav === false ) mainClasses.push( 'main--no-sitenav' );

doctype html
html( lang='en' )
	head
		include _partial/head
	body
		include _partial/header

		- if ( page.pageClass ) mainClasses.push( `main--${ page.pageClass }` );
		main( class = mainClasses )
			section( class = classes )

				.main__content-inner
					include _partial/gh-contribute
					include _partial/rwd-breadcrumbs

					block content

					//- Create feedback widget element in case with configured umberto-main.json and not disabled via single .md file.
					if ( feedbackWidget && page[ 'feedback-widget' ] !== false )
						.feedback-widget
							#emojics-root

			block navtree

		include _partial/footer
		include _partial/docsearch

		script( src = relative_url( page.path, pathJoin( 'assets', umbertoVersion, 'scripts/app.js' ) ) )

		if page.isSnippetPage
			//UMBERTO: SNIPPET: JS

		if projectLocals
			each path in projectLocals.extraScriptsPaths
				script( src = relative_url( page.path, path ), async=true )
