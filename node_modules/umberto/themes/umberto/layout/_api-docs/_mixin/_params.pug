mixin paramsMixin ( params, level, title )
    - const baseLevel = 4;
    - const hLevel = level || 4;
    - const heading = 'h' + hLevel;
    - const titleText = title || 'Parameters';

    if ( hLevel > baseLevel )
        div( class="dlheading" + hLevel )
            != titleText

    dl
        each param in params
            dt
                code
                    if param.optional
                        | [ #{ param.name } ]
                    else
                        | #{ param.name }
                    if isNonEmptyArray( param.types )
                        | :
                        | !{ ' ' }
                        +type( param.types )

            dd
                if ( param.description )
                    | !{ param.description.content }

                if isNonEmptyArray( param.params )
                    //- nested params
                    +paramsMixin( param.params, hLevel+1, param.subParamsText || 'Properties' )

                if param.defaultvalue
                    p Defaults to
                        | !{ ' ' }
                        code #{ param.defaultvalue }
