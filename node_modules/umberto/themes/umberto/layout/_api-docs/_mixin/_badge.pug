mixin badge( bdg )
    = "\n"

    - const classStr = `badge badge--${bdg.class} ${bdg.info ? "badge--has-invert" : ""}`;

    if bdg.linkTo
            span( class = classStr )
                a( href= bdg.linkTo ) #{ bdg.text }
                    if bdg.info
                        | !{' '}
                        span.badge__invert #{ bdg.info }

    else
        span( class = classStr ) #{ bdg.text }
            if bdg.info
                | !{' '}
                span.badge__invert #{ bdg.info }