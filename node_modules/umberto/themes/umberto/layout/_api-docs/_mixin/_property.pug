include _params
include ./_type.pug
include ./_badge.pug
include ./_dev-names.pug
include ./_api-see-source.pug
include ./_related.pug

mixin property( prop )
	- const attrData = createFilterAttribs( prop );
	- const itemClasses = [ 'collapsing-list__item', 'collapsing-list__item--visible' ];

	li( class = itemClasses )&attributes( attrData )
		div( class="collapsing-list__term toggler--collapsed" id=prop.id )
			h3
				if isNonEmptyArray( prop.badges )
					p.badges
						each badge in prop.badges
							+badge( badge )

				code
					a( class="member-name" href="#" + prop.id ) #{ prop.name }

					if isNonEmptyArray( prop.types )
						|  :!{' '}
						+type( prop.types, prop.optional )

				+devNames( prop.longname )

		div.collapsing-list__description
			if ( prop.description && prop.description.excerpt )
				div.collapsing-list__excerpt
					p !{ prop.description.excerpt }

			div.collapsing-list__content
				+seeSource( prop )

				if ( prop.description )
					| !{ prop.description.content }

				if prop.defaultvalue
					p Defaults to
						| !{ ' ' }
						code #{ prop.defaultvalue }

				if isNonEmptyArray( prop.params )
					h4 Parameters
					+paramsMixin( prop.params )

				if isNonEmptyArray( prop.see )
					+related( prop.see )

