include ../_mixin/_badge

div(class="api-subheader hidden-loading")
	div.api-subheader__badges
		span.badge #{ data.kind }
		if isNonEmptyArray( data.badges )
			each badge in data.badges
				+badge( badge )
	nav.api-subheader__navigation
		if ( isNonEmptyArray( data.configOptions ) || isNonEmptyArray( data.properties ) || isNonEmptyArray( data.methods ) || isNonEmptyArray( data.events ) )
			ul
				if ( isNonEmptyArray( data.configOptions ) )
					li.api-subheader__navigation-category.api-subheader__navigation-dropdown--hidden( data-type="configs" ) Config options
				if ( isNonEmptyArray( data.properties ) )
					li.api-subheader__navigation-category.api-subheader__navigation-dropdown--hidden( data-type="properties" ) Properties
				if ( isNonEmptyArray( data.methods ) )
					li.api-subheader__navigation-category.api-subheader__navigation-dropdown--hidden( data-type="methods" ) Methods
				if ( isNonEmptyArray( data.events ) )
					li.api-subheader__navigation-category.api-subheader__navigation-dropdown--hidden( data-type="events" ) Events
