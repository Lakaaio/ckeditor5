include ../_mixin/_property

if isNonEmptyArray( data.properties )
	h2( id="properties" class="hidden-loading" ) Properties
	if isNonEmptyArray( data.staticProperties )
		if isNonEmptyArray( data.instanceProperties )
			ul( class="collapsing-list collapsing-list--filtered hidden-loading" data-type="properties" )
				each p in data.instanceProperties
					+property( p )

		h4( class="hidden-loading" ) Static properties
		ul( class="collapsing-list collapsing-list--filtered hidden-loading" data-type="properties" )
			each p in data.staticProperties
				+property( p )

	else
		ul( class="collapsing-list collapsing-list--filtered hidden-loading" data-type="properties" )
			each p in data.properties
				+property( p )
