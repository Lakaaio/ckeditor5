include ../_mixin/_hierarchy-list
include ../_mixin/_sidebox-list

- const hasAugments = data.augments && data.augments.length > 1;
- const hasImplements = isNonEmptyArray( data.implements );
- const hasImplementedBy = isNonEmptyArray( data.implementedBy );
- const hasMixes = isNonEmptyArray( data.mixes );
- const hasMixedBy = isNonEmptyArray( data.mixedBy );
- const hasSubclasses = isNonEmptyArray( data.subclasses );

if ( hasAugments || hasImplements || hasImplementedBy || hasMixes || hasMixedBy || hasSubclasses )
	nav( class="api-secondary-navigation api-info-box hidden-loading" )
		dl
			if ( hasAugments )
				+hierarchyList( data.augments )

			if ( hasImplements )
				+sideboxList( data.implements, 'Implements' )

			if ( hasImplementedBy )
				+sideboxList( data.implementedBy, 'Implemented By' )

			if ( hasMixes )
				+sideboxList( data.mixes, 'Mixes' )

			if ( hasMixedBy )
				+sideboxList( data.mixedBy, 'Mixed By' )

			if ( hasSubclasses )
				+sideboxList( data.subclasses, 'Subclasses' )
