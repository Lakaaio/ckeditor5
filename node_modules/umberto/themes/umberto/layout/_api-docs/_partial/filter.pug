div( class="notice notice__filter api-props-filter hidden-loading" )
	div( class="api-props-filter__inner" )
		h4 Filtering
		ul
			li
				input( type="checkbox" id="f1" value="public" checked )
				label( for="f1" )
					span( class="badge badge--gray" ) Public
			li
				input( type="checkbox" id="f4" value="inherited" checked )
				label( for="f4" )
					span( class="badge badge--gray" ) Inherited

			//- Typedoc does not support the `@mixin` concept as it is implemented in Umberto.
			//- See: #1060.
			if ( projectLocals.apiType !== 'typedoc' )
				li
					input( type="checkbox" id="f6" value="mixed" checked )
					label( for="f6" )
						span( class="badge badge--gray" ) Mixed

			//- Typedoc supports the `@internal` annotation. See: #1057.
			if ( projectLocals.apiType === 'typedoc' )
				li
					input( type="checkbox" id="f7" value="internal" checked )
					label( for="f7" )
						span( class="badge badge--orange" ) Internal

			li
				input( type="checkbox" id="f2" value="protected" )
				label( for="f2" )
					span( class="badge badge--orange" ) Protected
			li
				input( type="checkbox" id="f3" value="private" )
				label( for="f3" )
					span( class="badge badge--red" ) Private
			li
				input( type="checkbox" id="f5" value="deprecated" )
				label( for="f5" )
					span( class="badge badge--red" ) Deprecated
