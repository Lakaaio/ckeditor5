extends base

block content
    - const split = uSplitToTitleAndContent( page.content );

    h1
        != split.title || page.title

    if page.toc !== false
        != uToc( page.content, { tocLimit: page[ 'toc-limit' ] } )

    != split.content

block navtree
    .side-navigation
        .side-navigation__wrapper
            nav.side-navigation__inner
