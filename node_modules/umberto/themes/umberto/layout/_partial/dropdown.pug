div.dropdown__wrapper
	ul.dropdown__content
		if page.path === 'index.html' && mainName
			- page.projectfullname = mainName

		a.dropdown__title( href=relative_url( page.path, page.BASE_PATH + page.startPage ) )= page.projectfullname

		each project in projectsData
			if !page.path.includes( project.BASE_PATH )
				li( class=project.name.replace( ' ', '-' ) )
					a( href=relative_url( page.path, project.latestBasePath + project.startPage ) )
						!= project.name
