	.header__menu-rwd
		ul.header__menu-rwd__projects
			each project in projectsData
				li( data-project= project.slug )
					a( href=relative_url( page.path, project.latestBasePath + project.startPage ) )= project.name
					if project.slug === page.projectName
						ul.tree.header__menu-rwd__projects-pages
							each group in projectLocals.groups
								li( data-group= group.id )
									a( href=relative_url( page.path, group._url ) )= group.name
									//- Display subpages for active project.
									if group.id === page.groupId
										if !page.isSdk && !page.isApi
											//- regular page
											- const pageGroup = projectLocals.getPageGroup( page.groupId )
											ul.header__menu-rwd__projects-subpages
												+navTreeLevel( pageGroup, true )
										else if page.isSdk && projectLocals && projectLocals.sdkNavTree
											//- index page of sdk
											ul.header__menu-rwd__projects-subpages
												!= projectLocals.sdkNavTree
										else if page.isSdk
											//- sdk pages build outside of hexo
											ul.header__menu-rwd__projects-subpages
												include ../_sdk/_partial/navtree.pug
