if googletagmanager && googletagmanager.gtm

	//- Google Tag Manager (noscript)
	noscript
		iframe( src="https://www.googletagmanager.com/ns.html?id=" + googletagmanager.gtm height="0" width="0" style="display:none;visibility:hidden" )
	//- End Google Tag Manager (noscript)

header.top( data-project= projectLocals ? projectLocals.projectSlug : undefined )
	.header__main
		.header__main-rwd-button
			a( href="#" )
				span
				span
				span

		.header__main-title
			a.header__main-title-home( href=relative_url( page.path, 'index.html') ) CKEditor Ecosystem Documentation

		include ./search-box

	if page.pageClass !== 'home'
		.header__sub
			ul.top__menu( class= !( projectLocals && projectLocals.groups.length ) ? 'top__menu--right' : '' )
				li.top__menu-project-logo
					a( href=relative_url( page.path, page.BASE_PATH + page.startPage ) )= page.projectfullname

				if projectLocals && projectLocals.groups
					each group in projectLocals.groups
						- const menuItemClasses = group.id === page.groupId ? [ 'top__menu__item--active' ] : [ '' ];
						- if ( group.id === 'api-reference' ) menuItemClasses.push( 'top__menu__api' );
						li
							a( class=menuItemClasses href=relative_url( page.path, group._url ) ) #{ group.name }

					if projectLocals && projectLocals.repoUrl
						li
							a.top__menu-github-link( href=projectLocals.repoUrl target='_blank' title= `${page.projectfullname} on GitHub.` )
