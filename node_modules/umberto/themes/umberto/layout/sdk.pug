extends base

block content
	- const split = uSplitToTitleAndContent( page.content );

	h1.main__content-title
		img( src=relative_url( page.path, 'assets/' + umbertoVersion + '/img/book.svg' ) alt="guide" )
		!= split.title || page.title

	if page.toc !== false
		!= uToc( page.content, { groupId: page.groupId, tocLimit: page[ 'toc-limit' ] } )

	!= split.content

block navtree
	if projectLocals && projectLocals.sdkNavTree
		.side-navigation.side-navigation--sdk
			.side-navigation__wrapper
				nav.side-navigation__inner
					ul.tree.sdk-tree
						!= projectLocals.sdkNavTree

block projectVersion
	if projectLocals
		meta( name= 'project-version' content= projectLocals.projectVersion )
		meta( name= 'project-slug' content= projectLocals.projectSlug )
