{
	"title": "Umberto",
	"author": "CKSource Holding sp. z o.o.",
	"url": "http://localhost:4000",
	"root": "/",
	"source_dir": "source",
	"public_dir": "build/docs",
	"theme": "umberto",
	"external_link": {
		"enable": true,
		"exclude": [
			"ckeditor.com"
		]
	},
	"pug": {
		"pretty": true
	},
  	"highlight": {
	  	"enable": false
	},
	"prism": {
		"enable": false
	},
  	"markdown_it_plus": {
	  	"highlight": false,
	  	"html": true,
	  	"breaks": true,
		"linkify": false,
		"plugins": [
			{
				"plugin": {
					"name": "markdown-it-toc-and-anchor",
					"enable": true,
					"options": {
						"toc": false,
						"anchorClassName": "headerlink",
						"anchorLinkSymbol": "#"
					}
				}
			},
			{
				"plugin": {
					"name": "markdown-it-expand-tabs",
					"enable": true,
				  	"options": {
					  	"tabWidth": 4
					}
				}
			}
		]
	},
  	"skip_render": [
	  	"**/*.css",
	  	"**/*.scss",
	  	"**/*.html",
	  	"**/*.json",
	  	"**/*.js",
	  	"**/*.txt"
	]
}
